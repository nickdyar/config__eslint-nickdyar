{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks", "prettier"],
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/prop-types": 0,
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 90,
        "endOfLine": "lf",
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "semi": false,
        "singleQuote": false,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "es5"
      }
    ]
  }
}

